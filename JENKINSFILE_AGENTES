pipeline {
    agent none

    stages {
        stage('Get Code') {
            agent { label 'windows' }
            steps {
                bat 'whoami && hostname && echo %WORKSPACE%'
                echo 'Me voy a traer el codigo'
                // Obtener c√≥digo del repo
                git 'https://github.com/DaniDiLara/helloworld.git'
                bat 'dir'
                echo WORKSPACE
                stash name: 'fuente', includes: '**'
            }
        }

        stage('Build') {
            agent { label 'python' }
            steps {
                bat 'whoami && hostname && echo $WORKSPACE'
                echo 'NO HAY QUE COMPILAR NADA. ESTO ES PYTHON'
                unstash 'fuente'
            }
        }

        stage('Tests') {
            parallel {
                stage('Unit') {
                    agent { label 'python' }
                    steps {
                        bat 'whoami && hostname && echo %WORKSPACE%'
                        unstash 'fuente'
                        bat '''
                            set PYTHONPATH=%WORKSPACE%
                            pytest --junitxml=result-unit.xml test\\unit
                        '''
                        stash name: 'results-unit', includes: 'result-unit.xml'
                    }
                }
                
                stage('Rest') {
                    agent { label 'java' }
                    steps {
                        bat 'whoami && hostname && echo $WORKSPACE'
                        unstash 'fuente'
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            bat '''
                                set FLASK_APP=app\\api.py
                                set FLASK_ENV=development
                                start flask run
                                start java -jar C:\\Users\\DaniL\\OneDrive\\Escritorio\\Curso\\Repositorios\\helloworld\\test\\wiremock\\wiremock-jre8-standalone-2.28.0.jar --port 9090 --root-dir C:\\Users\\DaniL\\OneDrive\\Escritorio\\Curso\\Repositorios\\helloworld\\test\\wiremock
                                set PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-rest.xml test\\rest
                            '''
                        }
                        stash name: 'results-rest', includes: 'result-rest.xml'
                    }
                }    
            }
        }
        
        stage ('Results') {
            agent { label 'java' }
            steps {
                bat 'whoami && hostname && echo $WORKSPACE'
                unstash 'results-unit'
                unstash 'results-rest'
                junit 'result*.xml'
            }
        }
    }
}